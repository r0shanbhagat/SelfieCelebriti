<resources>

    <style name="DialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>


    <style name="HttpCache.TextAppearance.ListItem" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HttpCache.TextAppearance.Label" parent="android:TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HttpCache.TextAppearance.Value" parent="android:TextAppearance.Small">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="HttpCache.TextAppearance.TransactionTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">top</item>
        <item name="android:textSize">16dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="HttpCache.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/httpCacheColorPrimary</item>
        <item name="colorPrimaryDark">@color/httpCacheColorPrimaryDark</item>
        <item name="colorAccent">@color/httpCacheColorAccent</item>
    </style>


    <!-- animation for Dialog -->
    <style name="DialogEnterAnimation">
        <item name="android:windowEnterAnimation">@anim/grow_from_middle</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogExitAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_dissappear</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>
